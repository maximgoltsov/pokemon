{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "pretty": true,
    "target": "es5",
    "removeComments": true,
    "noEmit": false,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "displayName": true
      }
    ]
  },
  "include": [
    "jest.config.ts",
    "jest.setup.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.d.ts",
    "*.spec.tsx"
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}
